{
  "Serilog":
  {
    "MinimumLevel": {
      "Default": "Information",
      "Override":
      {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },

  "globalSettings": {
    "siteName": "LaserPointer",
    "projectName": "WebApi",
    "IdentitySecret": "supersecret",
    "basePath": "/lpwebapi",
    "baseServiceUri": {
      "clientapp": "https://10.10.2.134",
      "webApi": "https://10.10.2.134/lpwebapi",
      "identity": "https://10.10.2.134/lpidentity"
    }
  }
}