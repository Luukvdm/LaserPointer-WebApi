{
  "Serilog":
  {
    "MinimumLevel": {
      "Default": "Information",
      "Override":
      {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },

  "globalSettings": {
    "siteName": "LaserPointer",
    "projectName": "WebApi",
    "basePath": "/api",
    "IdentityAuthority": "https://lp-ids",
    "IdentitySecret": "supersecret"
  }
}