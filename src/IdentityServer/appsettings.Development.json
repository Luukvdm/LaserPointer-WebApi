{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=:memory:;Version=3;New=True;"
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  
  "IdentityServer": {
    "Key": {
      "Type": "Development"
    },
    "Oid-Clients": [
      {
        "Enabled": true,
        "ClientId": "LaserPointer.WebClient",
        "ClientName": "LaserPointer.WebClient",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireClientSecret": false,
        "RequirePkce": true,
        "AllowAccessTokensViaBrowser": true,
        "RequireConsent": false,
        "ClientUri": "http://localhost:8080",
        "RedirectUris": [ "http://localhost:8080/oidc/callback", "https://localhost:8080/oidc/callback" ],
        "PostLogoutRedirectUris": [ "http://localhost:8080" ],
        "AllowedCorsOrigins": [ "http://localhost:8080", "https://localhost:8080" ],
        "AllowedScopes": [ "LaserPointer.IdentityServer.IdentityServerAPI", "openid", "profile", "email", "WebApi" ]
      },
      {
        "Enabled": true,
        "ClientId": "WebApi",
        "RequireClientSecret": true,
        "ClientSecrets": [ "secret" ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "openid", "WebApi" ]
      }
    ]
  }
}
